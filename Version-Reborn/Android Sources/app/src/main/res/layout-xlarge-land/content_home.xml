    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_gravity="center"
        tools:showIn="@layout/activity_home"
        android:weightSum="1">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/linear1"
            android:layout_width="350sp"
            android:layout_height="fill_parent"
            android:background="@drawable/side_nav_bar_darkgrey"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:layout_marginStart="10sp"
            android:layout_weight="0.33">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp">


                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:layout_gravity="center"
                    android:paddingTop="12sp"
                    app:srcCompat="@drawable/analytics"/>



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:id="@+id/text1"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="Consulter l'utilisations \n des Ressources Système"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


        </LinearLayout>



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/linear2"
            android:layout_width="350sp"
            android:layout_height="fill_parent"
            android:background="@drawable/side_nav_bar_beige"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:layout_toRightOf="@+id/linear1"
            android:layout_weight="0.33">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_gravity="center"
                android:paddingTop="12sp"
                app:srcCompat="@drawable/cactus"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:id="@+id/text2"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="Supervision SNMP des Postes de Travail"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/linear3"
            android:layout_width="350sp"
            android:layout_height="fill_parent"
            android:background="@drawable/side_nav_bar_darkblue"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:layout_marginRight="10sp"
            android:layout_toRightOf="@+id/linear2"
            android:layout_weight="0.33">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_gravity="center"
                android:paddingTop="12sp"
                app:srcCompat="@drawable/routerx128"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/text3"
                android:layout_height="100sp"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="Activation du Service SNMP"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


        </LinearLayout>



    </LinearLayout>
